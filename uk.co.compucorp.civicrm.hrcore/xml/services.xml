<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="drupal_role_service" class="CRM_HRCore_Service_DrupalRoleService"/>
        <service id="drupal_user_service" class="CRM_HRCore_Service_DrupalUserService">
            <argument id="drupal_role_service"/>
        </service>
        <service id="civihr_stats_gatherer" class="CRM_HRCore_Service_CiviHRStatsGatherer">
            <argument id="cms_variable_service" type="service"/>
        </service>
        <service
                id="cms_variable_service"
                factory-class="CRM_HRCore_CMSData_CMSVariableServiceFactory"
                factory-method="create"
                class="CRM_HRCore_CMSData_Variable_VariableServiceInterface"
        />
    </services>
</container>
